{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "types"],
    "types": ["node", "mocha", "chance", "chai", "truffle-contracts"],
    "strict": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "build"],
    "excludeFiles": ["tsconfig.js"]
  },

  "include": ["test/**/*.ts", "test/**/*.js", "migrations/**/*.ts"],
  "exclude": ["node_modules", "build", "scripts", "tsconfig.js"]
}